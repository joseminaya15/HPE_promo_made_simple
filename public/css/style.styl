$regular   = 'RobotoRegular'
$bold      = 'RobotoBold'
$medium    = 'RobotoMedium'
$light     = 'RobotoLight'
$default   = #4FC0A6;
$volumen   = #624967;
$valor     = #F79679;
$translate = translate(-50%,-50%);

transform()
	-webkit-transform $translate
    -moz-transform $translate
    -ms-transform $translate
	-o-transform $translate
	transform $translate
	
transformTransition()
	-webkit-transition transform .2s linear
	-moz-transition transform .2s linear
	-ms-transition transform .2s linear
	-o-transition transform .2s linear
	transition transform .2s linear

widthTransition()
	-webkit-transition max-width .2s linear
	-moz-transition max-width .2s linear
	-ms-transition max-width .2s linear
	-o-transition max-width .2s linear
	transition max-width .2s linear
	
center()
	position: absolute
	top: 50%
	left: 50%
	width: 100%
	margin: auto
	transform()
	transformTransition()

body
	margin 0
	padding 0
	overflow hidden
	overflow-y scroll
	font-family $regular
label
	font-weight 100

.section
	position relative
	padding 20px
	
.center-login
	center()
	
.header
	background-color #415564
	padding 20px 0
	position fixed
	top 0
	left 0
	right 0
	z-index 10
	img
		width 100%
		max-width 175px
	p 
		font-size 32px
		color #FFFFFF
		font-family $bold
		margin-top 25px

.mdl-container
	max-width 1200px
	margin auto
	widthTransition()
	.promociones
		margin-top 120px
		.buscador
			border 1px solid #000000
			padding 5px
			.search
				max-width calc(100% - 55px)
				width 100%
				display inline-block
				vertical-align middle
				margin 0
				input
					box-shadow none
					border none
			.button-search
				max-width 45px
				width 100%
				display inline-block
				vertical-align middle
				text-align center

.mdl-input
	padding 7px 20px
	height 75px
	margin 0
	border 1px solid #000000
	label
		font-family $light
		color #000000
		cursor pointer
	input
		display block
		height 36px
		width 100%
		border none
		&:focus
			outline 0
	&.input-focused
		border 1px solid #01A982	
	.bootstrap-select
		width 100% !important
		.dropdown-toggle
			border: none !important
			padding: 6px 0
			background-color: transparent !important
			box-shadow: none !important
			outline: 0 !important
			&:focus
				outline: 0 !important
				
.mdl-label
	padding 20px 10px

.mdl-create
	padding 20px 0
	.col-xs-6
		text-align center
		&:nth-child(1)
			border-right 1px solid $default
.mdl-card-login
	width 100%
	max-width 400px
	margin auto
	border none
	padding 10px
	.mdl-card__actions
		button
			width 100%
			background-color $default
			color #FFFFFF
			font-family $bold
			text-transform initial
			height: 42px
			box-shadow: none
			border-radius: 0
			font-size 16px
		.button-user
			width 49%
			display inline-block
			button
				border 1px solid $default
				background-color transparent
				color #000000
				&:hover
					background-color $default
					color #FFFFFF
		.button-register
			max-width 180px
			margin-top 38px
			i
				vertical-align middle
				color #FFFFFF
				margin-right 20px
		p
			color #000000
			margin-top 10px
			margin-bottom 5px
	a 
		color #000000
		text-decoration underline
		text-decoration-color $default
		font-family $medium
    &.mdl-card-register
		max-width 800px
		.mdl-input
			margin 10px 0
.userActive{
	background-color #4FC0A6 !important;
	color #FFFFFF !important
}

.mdl-card__supporting-text
	width 100%
	padding 0

.mdl-card-promocion
	width 49%
	max-width 590px
	display inline-block
	margin 15px 0
	float left
	padding 10px
	box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
	&:nth-child(2n+1)
		margin-right 8px
	&:nth-child(2n)
		margin-left 8px
	.mdl-header
		background-color $volumen
		padding 0 5px
		h2
			color #FFFFFF
			font-size 16px
			margin 0
			line-height 20px
			display inline-block
			vertical-align middle
			max-width calc(100% - 135px)
			width 100%
			font-family $medium
		p
			max-width 120px
			color $volumen
			width 100%
			padding 0 20px 0 10px
			line-height 16px
			font-size 14px
			font-family $medium
			display inline-block
			vertical-align middle
			background-color #FFFFFF
			margin 0
	.mdl-contenido
		padding 10px 0
		font-size 0
		.contenido
			display inline-block
			width 55%
			vertical-align top
			.promocion
				.title
					background-color #D1D3D4
					color $volumen
					font-size 16px
					margin 0
					line-height 20px
					font-family $medium
					padding 5px
				p
					margin 0
					line-height 20px
					padding 5px
		.imagenes
			display inline-block
			width 43%
			border 1px solid #000000
			vertical-align top
			float right
			.imagen-promocion
				width 100%
				max-width 180px
				padding 5px
			.footer-promocion
				padding 5px 15px
				img
					&:nth-child(1)
						float left
					&:nth-child(2)
						float right
							