$regular   = 'RobotoRegular'
$bold      = 'RobotoBold'
$medium    = 'RobotoMedium'
$light     = 'RobotoLight'
$default   = #4FC0A6;
$volumen   = #634A67;
$valor     = #F69779;
$translate = translate(-50%,-50%);

transform()
	-webkit-transform $translate
    -moz-transform $translate
    -ms-transform $translate
	-o-transform $translate
	transform $translate
	
transformTransition()
	-webkit-transition transform .2s linear
	-moz-transition transform .2s linear
	-ms-transition transform .2s linear
	-o-transition transform .2s linear
	transition transform .2s linear

widthTransition()
	-webkit-transition max-width .2s linear
	-moz-transition max-width .2s linear
	-ms-transition max-width .2s linear
	-o-transition max-width .2s linear
	transition max-width .2s linear
	
center()
	position: absolute
	top: 50%
	left: 50%
	width: 100%
	margin: auto
	transform()
	transformTransition()

body
	margin 0
	padding 0
	overflow hidden
	overflow-y scroll
	font-family $regular
label
	font-weight 100

.section
	position relative
	padding 20px
	
.center-login
	center()
	max-width: 360px
	
.header
	background-color #415564
	padding 20px 0
	img
		width 100%
		max-width 175px
	p 
		font-size 32px
		color #FFFFFF
		font-family $bold
		margin-top 25px

.mdl-container
	max-width 1200px
	margin auto
	widthTransition()

.mdl-input
	padding 7px 20px
	margin 0
	border 1px solid #000000
	label
		font-family $light
		color #000000
		cursor pointer
	input
		display block
		height 36px
		width 100%
		border none
		&:focus
			outline 0
	&.input-focused
		border 1px solid #01A982	
		
.mdl-label
	padding 20px 10px

.mdl-card-login
	width 100%
	max-width 360px
	.mdl-card__actions
		button
			width 100%
			background-color $default
			color #FFFFFF
			font-family $bold
			text-transform initial
			height: 42px
			box-shadow: none
			border-radius: 0
			font-size 16px

.mdl-card__supporting-text
	width 100%
	padding 0
		